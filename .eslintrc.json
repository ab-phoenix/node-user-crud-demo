{
	"env": {
		"commonjs": false,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"airbnb-base",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"prettier",
		"import"
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"endOfLine": "auto",
				"trailingComma": "es5",
				"tabWidth": 2,
				"semi": true,
				"singleQuote": true,
				"printWidth": 180,
				"useTabs": true
			}
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"mjs": "always",
				"js": "always"
			}
		],
		"no-console": [
			"warn",
			{
				"allow": [
					"info",
					"warn",
					"error"
				]
			}
		],
		"no-await-in-loop": "off",
		"max-len": [
			"error",
			{
				"code": 180,
				"ignoreUrls": true
			}
		],
		"consistent-return": "off",
		"no-shadow": "off",
		"one-var": "off",
		"no-param-reassign": "off",
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		],
		"no-nested-ternary": "off",
		"no-underscore-dangle": "off",
		"no-return-assign": [
			"error",
			"except-parens"
		],
		"default-case": [
			"error",
			{
				"commentPattern": "^skip\\sdefault"
			}
		],
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_"
			}
		],
		"no-fallthrough": [
			"error",
			{
				"commentPattern": "break[\\s\\w]*omitted"
			}
		],
		"import/prefer-default-export": "off"
	}
}